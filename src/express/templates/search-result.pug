extends layout.pug
include mixins/ticket-list.pug
include mixins/ticket-card.pug

block content
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска

      .search-results__wrapper
        if (!searchResult)
          .search-results__message
            p
              | Не найдено
              br
              | ни одной публикации
        else
          p.search-results__label Найдено 
            span.js-results #{searchResult.length} публикации

          ul.search-results__list
            each item in searchResult
              li.search-results__item
                +ticketCard(item)

    +ticketList(`Самые новые предложения`, `Самое свежее`, newestOffers)
