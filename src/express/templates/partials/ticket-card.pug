li.tickets-list__item
  .ticket-card.ticket-card--color01
    .ticket-card__img
      img(src=`/img/${offer.picture}` srcset=`/img/${offer.picture.split('.')[0]}@2x.jpg 2x` alt='Изображение товара')
    .ticket-card__info
      span.ticket-card__label #{offer.type === `buy` ? `Куплю` : `Продам`}
      .ticket-card__categories
        each category in offer.category
          a(href='#') #{category}
      .ticket-card__header
        h3.ticket-card__title
          a(href=`/offers/${offer.id}`) #{offer.title} #{offer.comments.length}
        p.ticket-card__price
          span.js-sum #{offer.sum} ₽
      .ticket-card__desc
        p #{offer.description}
