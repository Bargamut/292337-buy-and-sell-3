include ticket-card.pug

mixin ticketList(blockHeader, blockTitle, offers)
  section.tickets-list
    h2.visually-hidden #{blockHeader}
    .tickets-list__wrapper
      .tickets-list__header
        p.tickets-list__title #{blockTitle}
        //- a.tickets-list__link(href='#') Еще 25
      ul
        each offer in offers
          li.tickets-list__item
            +ticketCard(offer)
